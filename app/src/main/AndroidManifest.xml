<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.memoryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_book"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_book_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MemoryApp.NoActionBar">
        <activity
            android:name=".AnswerActivity"
            android:exported="false" />
        <activity
            android:name=".TestUserMemoryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShortTermMemoryPracticeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainMenuActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WelcomeScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>