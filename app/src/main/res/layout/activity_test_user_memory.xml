        app:layout_constraintStart_toEndOf="@+id/txtShape4"
        app:layout_constraintTop_toTopOf="@+id/txtShape4"
        app:thumbRadius="10dp"
        app:tickColor="@color/slider_tick_color"
        app:trackColor="@color/track_color" />

    <TextView
        android:id="@+id/txtShape4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/symbol_4"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtShape1"
        app:layout_constraintStart_toStartOf="@+id/txtShape1"
        app:layout_constraintTop_toBottomOf="@+id/txtShape3"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.slider.Slider
        android:id="@+id/shape3Slider"
