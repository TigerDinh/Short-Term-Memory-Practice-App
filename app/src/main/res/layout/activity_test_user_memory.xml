        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toEndOf="@+id/txtShape3"
        app:layout_constraintTop_toTopOf="@+id/txtShape3"
        app:thumbRadius="10dp"
        app:tickColor="@color/slider_tick_color"
        app:trackColor="@color/track_color" />

    <TextView
        android:id="@+id/txtShape3"
