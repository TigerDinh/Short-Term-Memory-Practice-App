<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestUserMemoryActivity"
    android:background="@drawable/test_user_background">

    <com.google.android.material.slider.Slider
        android:id="@+id/shape6Slider"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="10"
        app:layout_constraintBottom_toBottomOf="@+id/txtShape6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toEndOf="@+id/txtShape6"
        app:layout_constraintTop_toTopOf="@+id/txtShape6"
        app:thumbRadius="10dp"
        app:tickColor="@color/slider_tick_color"
        app:trackColor="@color/track_color" />

    <TextView
        android:id="@+id/txtShape6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/symbol_6"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtShape1"
        app:layout_constraintStart_toStartOf="@+id/txtShape1"
        app:layout_constraintTop_toBottomOf="@+id/txtShape5"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.slider.Slider
