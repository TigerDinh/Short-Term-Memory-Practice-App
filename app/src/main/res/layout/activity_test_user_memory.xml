        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toEndOf="@+id/txtShape5"
        app:layout_constraintTop_toTopOf="@+id/txtShape5"
        app:thumbRadius="10dp"
        app:tickColor="@color/slider_tick_color"
        app:trackColor="@color/track_color" />

    <TextView
        android:id="@+id/txtShape5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/symbol_5"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
