        android:valueTo="10"
        app:layout_constraintBottom_toBottomOf="@+id/txtShape1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toEndOf="@+id/txtShape1"
        app:layout_constraintTop_toTopOf="@+id/txtShape1"
        app:layout_constraintVertical_bias="0.48"
        app:thumbRadius="10dp"
        app:tickColor="@color/slider_tick_color"
        app:trackColor="@color/track_color" />

